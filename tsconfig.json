{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": false,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "outDir": "./public",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "exclude": [
    "node_modules",
    "node",
    "public"
  ]
}